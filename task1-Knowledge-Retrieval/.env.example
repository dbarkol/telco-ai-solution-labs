# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-5.2

# Authentication - set to true to use managed identity / Azure CLI auth
# Set to false and provide AZURE_OPENAI_API_KEY to use API key auth
USE_MANAGED_IDENTITY=true
# AZURE_OPENAI_API_KEY=<your-api-key>  # Only needed if USE_MANAGED_IDENTITY=false

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://<your-search-service>.search.windows.net
AZURE_SEARCH_API_KEY=<your-search-admin-key>
AZURE_SEARCH_INDEX_NAME=tmobile-gateway-docs

# Application Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
